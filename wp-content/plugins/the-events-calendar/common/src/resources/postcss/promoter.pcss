#wp-admin-bar-promoter-admin-bar {
	a.ab-item {
		display:     flex;
		flex-wrap:   wrap;
		align-items: center;

		.promoter-admin-bar__icon {
			margin-right: 5px;
			width:        20px;
			height:       20px;
			flex:         none;
		}

		.promoter-admin-bar__text {
			flex: none;
		}
	}

	&:focus,
	&:hover {
		.promoter-admin-bar__icon svg path {
			fill: #00B9EB;
		}
	}
}
