.tribe-events {

	/* -----------------------------------------------------------------------------
	 * Calendar Body
	 * ----------------------------------------------------------------------------- */

	.tribe-events-calendar-month__body {

		.tribe-common--breakpoint-medium& {
			border-top: 1px solid var(--color-border-secondary);
		}
	}

	.tribe-events-calendar-month__week {
		display: flex;

		.tribe-common--breakpoint-medium& {
			border-left: 1px solid var(--color-border-secondary);
		}
	}
}
