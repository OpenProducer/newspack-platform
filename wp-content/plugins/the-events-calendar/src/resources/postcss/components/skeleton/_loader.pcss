/* -----------------------------------------------------------------------------
 *
 * Loader
 *
 * ----------------------------------------------------------------------------- */

.tribe-events {

	.tribe-events-view-loader {
		align-items: flex-start;
		justify-content: center;
		display: flex;
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		z-index: var(--z-index-spinner-container);
		background-color: var(--color-background-transparent);
	}
}
